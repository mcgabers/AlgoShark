{
  "name": "algoshark",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.[jt]s?(x)'",
    "test:integration": "jest --testMatch='**/__integration__/**/*.test.[jt]s?(x)'",
    "test:integration:fast": "jest --testMatch='**/__integration__/**/*.test.[jt]s?(x)' --testPathIgnorePatterns='slow'",
    "test:e2e": "jest --testMatch='**/__e2e__/**/*.test.[jt]s?(x)'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "deploy:staging": "NODE_ENV=staging next build && next export",
    "deploy:production": "NODE_ENV=production next build && next export"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "algosdk": "^3.0.0",
    "axios": "^1.7.8",
    "clsx": "^2.1.1",
    "lucide-react": "^0.461.0",
    "next": "^14.2.18",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.4",
    "@types/node": "^20.17.8",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^14.2.18",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "postcss": "^8",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
